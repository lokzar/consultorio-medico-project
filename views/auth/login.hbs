<div class="p-5 text-center">
   <h1>Iniciar Sesión</h1>
   <form class="form-control" action="/auth/login" method="POST">
      <label class="labelClass"> Nombre Completo
         <br>
         <input type="text" name="username">
      </label>
      <br>
      <label class="labelClass"> Contraseña
         <br>
         <input type="password" name="password">
      </label>
      <br>
      <button class="btn btn-primary btn-xl rounded-pill mt-5" type="submit">Entrar</button>
   </form>

   {{#if errorMessage}}
   {{errorMessage}}
   {{/if}}
</div>